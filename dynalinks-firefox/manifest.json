{
    "applications": {
      "gecko": {
        "id": "dynalinks@iamdarkenergy.org",
        "strict_min_version": "55.0"
      }
    },

  "name": "Dynalinks",
  "version": "1.0.8",
  "description": "Dynalinks Firefox",
  "manifest_version": 2,
  "homepage_url": "https://github.com/Dark-Energy",
  "icons": {
    "48": "icons/arrow.png"
  },

  
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "alarms",
    "unlimitedStorage",
    "nativeMessaging"
  ],

    "browser_action": {
      "browser_style": true,
      "default_icon": {
        "48": "icons/arrow.png"
      },
      "default_title": "Hello!",
      "default_popup": "popup/popup.html"
     },


  "background": {
    "scripts": [ 
        "scripts/relation.js",    
        "lib/utils.js",              
        "lib/framework.js",        
        "lib/tab_manager.js",
        "scripts/testing_data.js",
        "scripts/init.js",
        "scripts/dynalinks.min.js", 
        "scripts/dynalinks_proxy.js", 
        "scripts/proxy_data.js",
        "scripts/popup_fabrices.js"
        ]
    },
 
    
    "web_accessible_resources": [
        "/css/line-menu.css",
        "/css/news-2.css",
        "/pages/links_view/links_view.html"
    ],
   
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self' ; img-src 'self'"
}
