{
  "name": "Dynalinks",
  "version": "1.0",  
  "description": "Dynalinks Firefox",
  "manifest_version": 2,
  "homepage_url": "https://github.com/Dark-Energy",
  "icons": {
    "48": "icons/arrow.png"
  },

  
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "nativeMessaging"
  ],

    "browser_action": {
      "browser_style": true,
      "default_icon": {
        "48": "icons/arrow.png"
      },
      "default_title": "Hello!",
      "default_popup": "popup/popup.html"
     },


  "background": {
    "scripts": [ 
        "scripts/relation.js",    
        "lib/utils.js",              
        "lib/framework.js",
        "lib/tab_manager.js",
        "scripts/testing_data.js",    
        "scripts/init.js",
        "scripts/fabric_dialog.js",
        "scripts/dynalinks.min.js", 
        "scripts/create_dynalinks.js", 
        "scripts/proxy_data.js" 
        ]
    },
 
    
    "web_accessible_resources": [
        "/css/dialog.css",    
        "/css/line-menu.css",
        "/css/news-2.css",
        "/pages/dialog/dialog.html",
        "/pages/links_view/links_view.html"
    ],
   
    "content_security_policy": "script-src 'self' moz-extension: chrome-extension: 'unsafe-eval' ; object-src 'self'; img-src 'self' 'unsafe-eval'"
}
