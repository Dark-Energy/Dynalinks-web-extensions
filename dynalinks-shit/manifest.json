{
  "description": "Dynalinks Firefox",
  "manifest_version": 2,  
  "name": "Dynalinks",
  "version": "1.0",  
  "homepage_url": "https://github.com/Dark-Energy",
  "icons": {
    "48": "icons/arrow.png"
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'", 
  
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],

    "browser_action": {
      "browser_style": true,
      "default_icon": {
        "48": "icons/arrow.png"
      },
      "default_title": "Hello!",
      "default_popup": "popup/popup.html"
     },


  "background": {
    "scripts": [ "scripts/background.js" ]
    }
}
